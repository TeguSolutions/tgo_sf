@inherits APULaborSelectorVM

<div class="popup-laborselector @PopupCss" style="top: @TopPx;" @onclick:stopPropagation>

    <SfTextBox @ref="@TbSearch" Placeholder="Search" ShowClearButton="true"
               Input="@TbFilterInputChanged" @onkeypress="@TbFilterKeyPressed" />

    <SfGrid @ref="@SfGrid" DataSource="@FilteredLabors" Height="270" RowHeight="30" AllowSorting="true" EnableVirtualization="true">
        <GridSelectionSettings Type="@SfGridSelectionType.Single"/>
        <GridEvents TValue="BaseLabor" RowSelected="GetSelectedRecords"/>
        <GridColumns>
            <GridColumn Field="@nameof(BaseLabor.Id)" IsPrimaryKey="true" Width="0" Visible="false"/>
            <GridColumn Field="@nameof(BaseLabor.Description)" HeaderText="Description" HeaderTextAlign="SfGridTextAlign.Center" TextAlign="@SfGridTextAlign.Left"/>

            <GridColumn Field="@nameof(BaseLabor.Salary)" HeaderText="Salary" Width="100" HeaderTextAlign="@SfGridTextAlign.Center" TextAlign="@SfGridTextAlign.Right">
                <Template>
                    <span>@(((BaseLabor)context).Salary.ToString("C", new CultureInfo("en-US")))</span>
                </Template>
            </GridColumn>

            <GridColumn Field="@nameof(BaseLabor.Cost)" HeaderText="Labor Cost" Width="100" HeaderTextAlign="@SfGridTextAlign.Center" TextAlign="@SfGridTextAlign.Right">
                <Template>
                    <span>@(((BaseLabor)context).Cost.ToString("C", new CultureInfo("en-US")))</span>
                </Template>
            </GridColumn>

            <GridColumn Field="@nameof(BaseLabor.LastUpdatedAt)" HeaderText="Date" HeaderTextAlign="SfGridTextAlign.Center" TextAlign="@SfGridTextAlign.Center"
                        Width="130" Type="@ColumnType.Date" Format="d"/>
        </GridColumns>
    </SfGrid>
</div>