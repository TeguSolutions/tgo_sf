        </Authorized>
    </AuthorizeView>

    <AuthorizeView Roles="@RD.AdministratorText">
        <Authorized>
            <a class="headerlink @Dict[NavS.Home.UserManager]" href="@NavS.Home.UserManager"
               @onclick="(() => Navigate(NavS.Home.UserManager))">Users</a>
        </Authorized>
    </AuthorizeView>
    
    <AuthorizeView Roles="@RD.AdministratorText">
        <Authorized>
            <a class="headerlink">Errors</a>
        </Authorized>
    </AuthorizeView>
 
