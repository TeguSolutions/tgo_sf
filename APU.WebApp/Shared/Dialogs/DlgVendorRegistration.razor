                    <SfButton CssClass="me-2" Content="Cancel" IsPrimary="false" OnClick="@Cancel" />
                    <SfButton Content="Register" IsPrimary="true" type="submit" />
                </div>

            </EditForm>

        </Content>
    </DialogTemplates>
</SfDialog>